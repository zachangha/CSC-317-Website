<main>
  <div class="bg_image"></div>
  <div class="wrapper">
    <div class="content">
      <h2>Post Video</h2>
      <form>
        <div>
          <label for="title">Title</label>
          <input type="text" name="title" id="title" placeholder="Title" />
        </div>

        <div>
          <label for="description">Description</label>
          <input
            type="text"
            name="description"
            id="description"
            placeholder="Description"
          />
        </div>

        <div>
          <label for="inputVideo">Input Video</label>
          <input type="file" id="inputVideo" name="inputVideo" />
        </div>

        <div class="checkboxes">
          <input
            type="checkbox"
            id="AcceptableUsePolicy"
            name="AcceptableUsePolicy"
          />
          <label for="AcceptableUsePolicy">
            I agree to the<a href="">Acceptable Use Policy.</a></label>
        </div>

        <div>
          <input type="submit" value="Post" />
        </div>
      </form>
    </div>
  </div>
</main>